<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>
		4.0.0
	</modelVersion>
	<artifactId>ear</artifactId>
	<packaging>ear</packaging>
	<name>zaalbeheer-ear</name>

	<dependencies>
		<dependency>
			<groupId>javax.ejb</groupId>
			<artifactId>ejb-api</artifactId>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>javax.persistence</groupId>
			<artifactId>persistence-api</artifactId>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>nl.paul.sohier.ttv.zaalbeheer</groupId>
			<artifactId>entities</artifactId>
		</dependency>
		
		<dependency>
			<groupId>nl.paul.sohier.ttv.zaalbeheer</groupId>
			<artifactId>dto</artifactId>
		</dependency>
				

		<dependency>
			<groupId>nl.paul.sohier.ttv.zaalbeheer</groupId>
			<artifactId>server</artifactId>
			<type>ejb</type>
		</dependency>

		<dependency>
			<groupId>nl.paul.sohier.ttv.zaalbeheer</groupId>
			<artifactId>web</artifactId>
			<type>war</type>
		</dependency>

		<dependency>
			<groupId>nl.paul.sohier.ttv.zaalbeheer</groupId>
			<artifactId>libary</artifactId>
		</dependency>

		<dependency>
			<groupId>org.eclipse.mylyn.github</groupId>
			<artifactId>org.eclipse.egit.github.core</artifactId>
		</dependency>
	</dependencies>

	<parent>
		<groupId>nl.paul.sohier.ttv.zaalbeheer</groupId>
		<artifactId>ZaalBeheer</artifactId>
		<version>0.0.1</version>
	</parent>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.8</version>
				<configuration>
					<!-- <modules> <webModule> <groupId>nl.paul.sohier.ttv.zaalbeheer</groupId> 
						<artifactId>web</artifactId> <contextRoot>/zaaldienst</contextRoot> </webModule> 
						<ejbModule> <groupId>nl.paul.sohier.ttv.zaalbeheer</groupId> <artifactId>server</artifactId> 
						</ejbModule> </modules> -->
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>

					<generatedDescriptorLocation>${basedir}/src/main/application/META-INF</generatedDescriptorLocation>

				</configuration>
			</plugin>
		</plugins>
		<finalName>zaalbeheer</finalName>
	</build>


</project>